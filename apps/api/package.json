{
  "name": "@rate-the-dogs/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "build": "wrangler deploy --dry-run --outdir=dist",
    "deploy": "wrangler deploy",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "db:migrate": "wrangler d1 migrations apply rate-the-dogs --remote",
    "db:migrate:local": "wrangler d1 migrations apply rate-the-dogs --local",
    "db:seed": "bun run scripts/seed.ts",
    "clean": "rm -rf dist .wrangler"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.4.1",
    "@rate-the-dogs/shared": "workspace:*",
    "hono": "^4.6.12",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.5.33",
    "@cloudflare/workers-types": "^4.20241127.0",
    "@types/node": "^22.10.1",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8",
    "wrangler": "^3.93.0"
  }
}
