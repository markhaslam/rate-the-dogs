{
  "name": "@rate-the-dogs/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "build": "mkdir -p ../web/dist && wrangler deploy --dry-run --outdir=dist",
    "deploy": "wrangler deploy",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "db:migrate": "wrangler d1 migrations apply rate-the-dogs --remote",
    "db:migrate:local": "wrangler d1 migrations apply rate-the-dogs --local",
    "db:seed": "bun run scripts/seed.ts",
    "clean": "rm -rf dist .wrangler"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.5",
    "@rate-the-dogs/shared": "workspace:*",
    "drizzle-orm": "^0.44.7",
    "hono": "^4.10.7",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.10.13",
    "@cloudflare/workers-types": "^4.20251202.0",
    "@types/node": "^22.10.1",
    "drizzle-kit": "^0.31.7",
    "drizzle-zod": "^0.8.3",
    "typescript": "^5.9.3",
    "vitest": "^3.2",
    "wrangler": "4"
  }
}
